{% extends "modules/default" %}

{% block blockClasses %}
{% if not block.darkMode %}bg-asmc-tan{% endif %}
{% endblock %}

{% block blockContent %}
<div class="max-w-7xl mx-auto px-4 py-8 lg:px-8 lg:py-16 {% if not block.topSpacing %}!pt-1{% endif %} {% if not block.bottomSpacing %}!pb-1{% endif %}">
	<article class="flex flex-col items-start justify-center p-6 md:p-8 lg:p-12 xl:p-16 bg-white text-asmc-black rounded-sm {% if block.imagePosition == 'left' %}order-2{% endif %}">
		{% if block.eyebrow %}
		<p class="font-mono text-xs md:text-sm">{{ block.eyebrow }}</p>
		{% endif %}
		{% if block.title %}
		<h2 class="my-6 xl:my-8 font-bold text-2xl xs:text-4xl xl:text-5xl leading-[1.1] {% if block.darkMode %}text-asmc-blue{% else %}text-asmc-gold{% endif %}">{{ block.title }}</h2>
		{% endif %}
		{% if block.text %}
		<div class="font-mono longform md:columns-2 md:gap-16">{{ block.text }}</div>
		{% endif %}
		{% if block.button %}
		<a href="{{ block.button }}" class="inline-block mt-6 px-4 py-3 border-2 border-asmc-blue font-semibold text-asmc-blue hover:text-white hover:bg-asmc-blue">{{ block.button.label }} &rarr;</a>
		{% endif %}
	</article>
</div>
{% endblock %}